
{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "es6",
    "jsx": "react",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ],
    "types": ["@types/jest"],

    "alwaysStrict":false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,

    "sourceMap": true,

    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "config"
  ]
}
